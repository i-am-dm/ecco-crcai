{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VentureShowPage",
  "type": "object",
  "required": [
    "id",
    "entity",
    "env",
    "schema_version",
    "created_at",
    "updated_at",
    "venture_id",
    "title"
  ],
  "properties": {
    "id": { "type": "string" },
    "entity": { "const": "show_page" },
    "env": { "enum": ["dev","stg","prod"] },
    "schema_version": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "venture_id": { "type": "string" },
    "title": { "type": "string" },
    "tagline": { "type": "string" },
    "hero_image": { "type": "string" },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "value"],
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "string" },
          "trend": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "highlights": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "date": { "type": "string", "format": "date" }
        },
        "additionalProperties": true
      }
    },
    "team": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "role"],
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "bio": { "type": "string" },
          "avatar": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "cta": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "url": { "type": "string" }
      },
      "additionalProperties": true
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string" },
          "content": { "type": "object" }
        },
        "additionalProperties": true
      }
    },
    "published": { "type": "boolean" },
    "seo": {
      "type": "object",
      "properties": {
        "meta_title": { "type": "string" },
        "meta_description": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
