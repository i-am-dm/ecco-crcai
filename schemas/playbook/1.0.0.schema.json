{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Playbook",
  "type": "object",
  "required": [
    "id",
    "entity",
    "env",
    "schema_version",
    "updated_at"
  ],
  "properties": {
    "id": { "type": "string" },
    "entity": { "const": "playbook" },
    "env": { "enum": ["dev", "stg", "prod"] },
    "schema_version": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },

    "name": { "type": "string" },
    "title": { "type": "string" },
    "stage": { "enum": ["Idea", "Validation", "Build", "Pilot", "Scale"] },
    "function": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "owner": { "type": "string", "format": "email" },
    "version": { "type": "string" },
    "status": { "enum": ["Draft", "Review", "Published"] },
    "effectiveness_score": { "type": "number", "minimum": 0, "maximum": 100 },

    "expected_impacts": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },

    "checklist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "role": { "type": "string" },
          "duration_days": { "type": "number", "minimum": 0 },
          "depends_on": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": true
      }
    },

    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "name", "uri"],
        "properties": {
          "type": { "type": "string" },
          "name": { "type": "string" },
          "uri": { "type": "string" }
        },
        "additionalProperties": true
      }
    },

    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "metric", "op", "target"],
        "properties": {
          "id": { "type": "string" },
          "metric": { "type": "string" },
          "op": { "type": "string" },
          "target": { "type": "number" },
          "window_days": { "type": "number", "minimum": 1 }
        },
        "additionalProperties": true
      }
    },

    "linked_ventures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "string" },
          "last_applied": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

